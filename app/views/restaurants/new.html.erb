<% provide(:title, 'Sign up') %>
<h1>店舗登録ページ</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@restaurant) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <br>

      <%= f.submit "新規登録", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

